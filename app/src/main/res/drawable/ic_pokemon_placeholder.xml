<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFCC00"/>
        </shape>
    </item>

    <!-- Inner circle -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#FFF176"/>
        </shape>
