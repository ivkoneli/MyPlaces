<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#1A237E"
        android:endColor="#0D133D"
        android:angle="270"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#3949AB"/>

    <!-- Inner padding effect -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
