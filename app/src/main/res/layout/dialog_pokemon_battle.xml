<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/battle_dialog_bg">

    <LinearLayout
        android:id="@+id/playerPokemonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vsText"
        app:layout_constraintTop_toTopOf="parent">

        <!-- AVATAR -->
        <ImageView
            android:id="@+id/playerPokemonImage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_pokemon_placeholder" />

        <!-- INFO BLOCK -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerPokemonName"
                android:text="Player Pokemon"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/playerPokemonAtk"
                android:text="ATK"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/playerPokemonHpText"
                android:text="❤️ 100 / 100"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <ProgressBar
                android:id="@+id/playerPokemonHpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="100"
                android:max="100"/>
        </LinearLayout>

    </LinearLayout>


    <!-- VS -->
    <TextView
        android:id="@+id/vsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS ⚔️"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/playerPokemonContainer"
        app:layout_constraintBottom_toBottomOf="@id/playerPokemonContainer"
        app:layout_constraintStart_toEndOf="@id/playerPokemonContainer"
        app:layout_constraintEnd_toStartOf="@id/enemyPokemonContainer"/>

    <!-- ENEMY POKEMON -->
    <LinearLayout
        android:id="@+id/enemyPokemonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/vsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- INFO BLOCK -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/enemyPokemonName"
                android:text="Lv.1 Charmander"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/enemyPokemonAtk"
                android:text="30 ATK"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/enemyPokemonHpText"
                android:text="❤️ 80 / 100"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <ProgressBar
                android:id="@+id/enemyPokemonHpBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="80"
                android:max="100"/>
        </LinearLayout>

        <!-- AVATAR -->
        <ImageView
            android:id="@+id/enemyPokemonImage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_pokemon_placeholder"/>
    </LinearLayout>

    <!-- CHOOSE / START BUTTONS -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerPokemonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnChoosePokemon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Choose Pokémon"/>

        <Button
            android:id="@+id/btnStartBattle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Start Battle"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnFinishBattle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Finish Battle"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- POKEMON LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemonSelectList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/battleLogScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/battleLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:typeface="monospace"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="4dp"
            android:padding="8dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
