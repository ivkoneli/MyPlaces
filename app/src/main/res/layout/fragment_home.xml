<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EAF7F6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- APP LOGO (preseÄen pola-pola) -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_foreground"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/welcome_card"
        app:layout_constraintStart_toStartOf="@id/welcome_card"
        app:layout_constraintEnd_toEndOf="@id/welcome_card"
        android:layout_marginTop="-60dp"/>


    <!-- MAIN WELCOME CARD -->
    <LinearLayout
        android:id="@+id/welcome_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="64dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/rounded_bg"
        android:elevation="6dp"
        android:minHeight="360dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘‹ Welcome, Trainer"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/welcome_card_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- STATS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <!-- CARD 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/pokemon_blue_faded"
                android:background="@drawable/rounded_bg"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="ðŸ¾"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Nearby"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:text="PokÃ©mons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- CARD 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="@color/heal_green_faded"
                android:background="@drawable/rounded_bg"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="â±ï¸"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>

                <TextView
                    android:text="Last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <TextView
                    android:text="Activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- CARD 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/pokestop_yellow_faded"
                android:background="@drawable/rounded_bg"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="ðŸ”¥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>

                <TextView
                    android:text="Daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <TextView
                    android:text="Progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- EXPLORE BUTTON -->
    <Button
        android:id="@+id/btn_explore"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Go Explore ->"
        android:textAllCaps="false"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_card"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/purple_500"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
