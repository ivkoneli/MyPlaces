<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom|center"
    android:padding="16dp"
    android:background="#EAF4FF">

    <!-- Silver (#2) -->
    <LinearLayout
        android:id="@+id/silverPodium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_silver_podium">

        <TextView
            android:id="@+id/silverRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/silverAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pokemon_placeholder"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/silverUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/silverWins"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ðŸ† 0"
            android:textSize="14sp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_trophy_badge"
            android:textColor="#5A3E1B"
            android:gravity="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Gold (#1) -->
    <LinearLayout
        android:id="@+id/goldPodium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_gold_podium">

        <TextView
            android:id="@+id/goldRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/goldAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pokemon_placeholder"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/goldUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/goldWins"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ðŸ† 0"
            android:textSize="14sp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_trophy_badge"
            android:textColor="#5A3E1B"
            android:gravity="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Bronze (#3) -->
    <LinearLayout
        android:id="@+id/bronzePodium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_bronze_podium">

        <TextView
            android:id="@+id/bronzeRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <ImageView
            android:id="@+id/bronzeAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pokemon_placeholder"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/bronzeUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/bronzeWins"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ðŸ† 0"
            android:textSize="14sp"
            android:paddingHorizontal="14dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_trophy_badge"
            android:textColor="#5A3E1B"
            android:gravity="center"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>
